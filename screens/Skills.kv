<SkillDisplay@GridLayout>:
    #orientation:'horizontal'
    #size_hint_y: None
    #height:max(x.height for x in self.children)
    size_hint_y:None
    height: self.minimum_height
    cols: 6
    Label:
        id: skillnamelabel
        size_hint_y: None
        size: self.texture_size
        text: 'Skill:'
    Button:
        size_hint_x: None
        size_hint_y: None
        size: self.texture_size
        on_press: root.remove_rank()
        text: '  -  '
    Label:
        id: skillranklabel
        #size_hint_x: None
        size_hint_y: None
        size: self.texture_size
        #text_size: 30, None
        text: '0'
    Button:
        size_hint_x: None
        size_hint_y: None
        size: self.texture_size
        on_press: root.add_rank()
        text: '  +  '
    Label:
        id: skillmiscbonus
        size_hint_y: None
        size: self.texture_size
        text: '0'
    Label:
        id: skilltotal
        size_hint_y: None
        size: self.texture_size
        text: '0'

<SkillLevelSelect@BoxLayout>:
    orientation:'horizontal'
    Label:
        id: skilllevellabel
        text: 'Level:'
    Button:
        id: skilllevelbutton
        on_press: root.open_popup()
        text: '0/0'

SkillScreen:
    name: 'General Tab'
    fullscreen: True
    BoxLayout:
        orientation:'vertical'
        BoxLayout:
            size_hint_y:None
            orientation:'horizontal'
            Label:
                text: 'Level'
            Label:
                text: 'Skill Points Used'
        ScrollView:
            BoxLayout:
                id: skilllevelcontainer
                size_hint_y:None
                height:sum(x.height for x in self.children)
                orientation:'vertical'

<SkillPopup>:
    title: 'Skill Selection Popup'
    fullscreen: True
    BoxLayout:
        orientation:'vertical'
        BoxLayout:
            size_hint_y:None
            orientation:'horizontal'
            Label:
                text: 'Skill'
            Label:
                text: ''
            Label:
                text: 'Ranks'
            Label:
                text: ''
            Label:
                text: 'Misc Bonuses'
            Label:
                text: 'Total'
        ScrollView:
            GridLayout:
                id: skillcontainer
                size_hint_y:None
                height: self.minimum_height
                cols: 1
                #size_hint_y:None
                #height:sum(x.height for x in self.children)
                #orientation:'vertical'
        BoxLayout:
            size_hint_y:None
            orientation:'horizontal'
            Label:
                id: skillpointslabel
                text: 'Skill Points Remaining:'
            Button:
                text: 'Close'
                on_press: root.cancel()