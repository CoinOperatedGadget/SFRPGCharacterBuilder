#: import Window kivy.core.window.Window
<RootWidget>:
# this is the rule for your root widget, defining it's look and feel.
    BoxLayout:
        orientation: 'vertical'
        ActionBar:
        #this is the auto provided ActionBar with some menus. Replace it with your
        #app structure
            pos_hint: {'top':1}
            ActionView:
                use_separator: True
                ActionPrevious:
                    title: 'Action Bar'
                    with_previous: False
                ActionButton:
                    id: setupbut
                    text: 'Setup'
                    on_release: app.switch_screen('Setup')
                ActionButton:
                    id: genbut
                    text: 'General'
                    on_release: app.switch_screen('General')
                    icon: './app_resources/icon2.png'
                ActionButton:
                    id: classbut
                    text: 'Classes'
                    on_release: app.switch_screen('Classes')
                ActionButton:
                    id: featsbut
                    text: 'Feats'
                    on_release: app.switch_screen('Feats')
                ActionButton:
                    text: 'Abilities'
                    icon: './app_resources/icon3.png'
                    on_release: app.switch_screen('Abilities')
                ActionButton:
                    text: 'Skills'
                    on_release: app.switch_screen('Skills')
                ActionButton:
                    text: 'Equipment'
                    icon: './app_resources/icon1.png'
                    on_release: app.switch_screen('Equipment')
                ActionGroup:
                    text: 'File'
                    mode: 'spinner'
                    size_hint_x: None
                    width: 90
                    ActionButton:
                        text: 'New'
                    ActionButton:
                        text: 'Open'
                        on_release: app.show_load()
                    ActionButton:
                        text: 'Save'
                        on_release: app.show_save()
                    ActionButton:
                        text: 'Export To PDF'
                        on_press: app.export_character()
                    ActionButton:
                        text: 'Licenses'
                        on_press: app.open_license_dialog()
                    ActionButton:
                        text: 'Quit'
        ScreenManager:
            id: sm

<LoadDialog>:
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"
        FileChooserIconView:
            id: filechooser
            path: "./save/"

        GridLayout:
            id: choicelist
            size_hint_y:None
            height: self.minimum_height
            cols: 2
            Button:
                size_hint_y: None
                size: self.texture_size
                text: "Cancel"
                on_release: root.cancel()

            Button:
                size_hint_y: None
                size: self.texture_size
                text: "Load"
                on_release: root.load(filechooser.path, filechooser.selection)

<SaveDialog>:
    text_input: text_input
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"
        FileChooserIconView:
            id: filechooser
            path: "./save/"
            on_selection: text_input.text = self.selection and self.selection[0] or ''

        TextInput:
            id: text_input
            size_hint_y: None
            height: self.minimum_height
            multiline: False

        GridLayout:
            id: choicelist
            size_hint_y:None
            height: self.minimum_height
            cols: 2
            Button:
                size_hint_y: None
                size: self.texture_size
                text: "Cancel"
                on_release: root.cancel()

            Button:
                size_hint_y: None
                size: self.texture_size
                text: "Save"
                on_release: root.save(filechooser.path, text_input.text)

<LicenseDialog>:
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"
        ScrollView:
            Label:
                id: licenselabel
                size_hint_y: None
                text_size: root.width, None
                size: self.texture_size

<ChoicePopup@Popup>:
    auto_dismiss: False
    title: 'Select:'
    BoxLayout:
        orientation: 'vertical'
        ScrollView:
            GridLayout:
                id: choicelist
                size_hint_y:None
                height: self.minimum_height
                cols: 1
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y:None
            Button:
                text: 'Select'
                size_hint_y:None
                on_release: root.confirm_choice()
            Button:
                text: 'Cancel'
                size_hint_y:None
                on_release: root.cancel()
            Button:
                text: 'Clear'
                size_hint_y:None
                on_release: root.clear_choice()